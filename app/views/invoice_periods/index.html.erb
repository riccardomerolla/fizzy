<% @page_title = "Invoice Periods - #{@contract.name}" %>

<div class="panel panel--centered">
  <div class="flex gap justify-between align-center margin-block-end">
    <div>
      <h1 class="txt-x-large margin-none font-weight-black"><%= @page_title %></h1>
      <p class="txt-muted margin-block-start-small">
        Site: <%= @contract.site&.name || "All Sites" %> • 
        Price: <%= number_to_currency(@contract.price_per_set_cents / 100.0) %>/set
      </p>
    </div>
    <%= link_to "Compute New Invoice", new_contract_invoice_period_path(@contract), class: "btn btn--primary" %>
  </div>

  <%= link_to "← Back to Contracts", contracts_path, class: "btn btn--small margin-block-end" %>

  <% if @invoice_periods.any? %>
    <table class="full-width margin-block-start">
      <thead>
        <tr>
          <th>Period</th>
          <th>Processed</th>
          <th>Nonconform</th>
          <th>Billable</th>
          <th>SLA Breaches</th>
          <th>Total</th>
          <th>Computed</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @invoice_periods.each do |period| %>
          <tr>
            <td><strong><%= Date.new(period.year, period.month, 1).strftime("%B %Y") %></strong></td>
            <td><%= period.processed_count %></td>
            <td><%= period.nonconform_count %></td>
            <td><%= period.billable_count %></td>
            <td><%= period.sla_breach_count %></td>
            <td><strong><%= number_to_currency(period.total_cents / 100.0) %></strong></td>
            <td class="txt-small txt-muted"><%= period.computed_at ? time_tag(period.computed_at, format: :short) : "—" %></td>
            <td class="flex gap">
              <%= link_to "View", invoice_period_path(period), class: "btn btn--small" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="blank-slate margin-block-start-large">
      <p class="txt-large">No invoices computed yet. Compute your first invoice for this contract.</p>
      <%= link_to "Compute Invoice", new_contract_invoice_period_path(@contract), class: "btn btn--primary margin-block-start" %>
    </div>
  <% end %>
</div>
